<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/toolbar"
        android:background="#070781"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/buttondrawertoggle"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_menu_24"
            android:background="@android:color/transparent"
            android:layout_gravity="start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="UZA/NUNUA APP"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Ninapokeaje malipo kwa mauzo yangu?"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:text="Malipo yanachakatwa kupitia mfumo wetu salama na yanaweza kuwekwa moja kwa moja kwenye akaunti yako ya benki au pochi ya dijitali."
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Je, kuna ada zozote za kuweka au kuuza bidhaa?"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:text="Tunatoza ada ndogo kwa kila mauzo, ambayo hukatwa kutoka kwenye jumla ya kiasi kilichopokelewa. Kuweka tangazo la bidhaa ni bure.
                                  "
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Ni aina gani za bidhaa ambazo haziruhusiwi?"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:text="Bidhaa ambazo ni haramu, hatarishi, au zinakiuka miongozo ya jamii yetu haziruhusiwi. Tafadhali rejea kwenye Sera ya Bidhaa Zilizopigwa Marufuku kwa maelezo zaidi."
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Ninawezaje kuhakikisha kuwa shughuli zangu ni salama?"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:text="Daima tumia mfumo salama wa malipo wa app, epuka kushiriki habari za kibinafsi, na kutana katika maeneo ya umma ikiwa mkutana ana kwa ana."
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5. Habari zangu za kibinafsi zinahifadhiwa vipi?"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:text="Tunatumia usimbaji fiche na seva salama kulinda data yako. Habari zako za kibinafsi hazitashirikiwa na watu wengine bila idhini yako."

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6. Kwa nini app haifanyi kazi vizuri?"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:text="Jaribu kuwasha tena app au kifaa chako, hakikisha una muunganisho mzuri wa intaneti, au angalia kama kuna masasisho. Ikiwa tatizo litaendelea, wasiliana na huduma kwa wateja."
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7. Ninawezaje kubadilisha mipangilio ya akaunti yangu?"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:text="Nenda kwenye wasifu wako na uchague Mipangilio ili kusasisha taarifa za akaunti yako, nenosiri, au mapendeleo ya arifa."
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8. Ninawezaje kuripoti mtumiaji au bidhaa?"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:text="Ili kuripoti mtumiaji au bidhaa, nenda kwenye ukurasa wa bidhaa au wasifu wa mtumiaji na uchague chaguo la Ripoti."
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                />

        </LinearLayout>





    </ScrollView>



</RelativeLayout>